<Window x:Class="PetrovLabWpf17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PetrovLabWpf17"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:ColorPicker x:Name="colorPicker" Margin="5" ColorChanged="colorPicker_ColorChanged"
                           Red="255" Green="100" Blue="0" Width="300" Height="150"/>
    </Grid>
</Window>
